<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanFitness.App"
             xmlns:a="clr-namespace:CleanFitness.Actions">
    <Application.Resources>
        <!-- Main -->
        <a:ViewModelLocator x:Key="VML" />

        <!-- Colors -->
        <Color x:Key="Colour_Background">#090909</Color>
        <Color x:Key="Colour_ClearBackground">#00000000</Color>
        <Color x:Key="Colour_TextDefault">#EFEFEF</Color>
        <Color x:Key="Colour_TextGrey">#7FD0FF</Color>
        <Color x:Key="Colour_TextHilight">#00A5FF</Color>
        <Color x:Key="Colour_TextWarning">#FF3700</Color>
        <Color x:Key="Colour_InputBackground">#393939</Color>
        
        <!-- Buttons -->
        <ResourceDictionary>
            <Style x:Name="styMainButton" TargetType="Button">
                <Setter Property="TextColor" Value="#EFEFEF" />
                <Setter Property="BackgroundColor" Value="#00A5FF" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>