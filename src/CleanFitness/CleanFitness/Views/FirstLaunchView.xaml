<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanFitness.Views.FirstLaunchView">
    <ContentView.Content>
        <StackLayout BackgroundColor="{StaticResource Colour_ClearBackground}" BindingContext="{Binding FirstLaunchVM, Source={StaticResource VML}}">
            <Label TextColor="{StaticResource Colour_TextHilight}" Text="First Launch" />
            <!-- Calories Data Loading -->
            <Label IsVisible="{Binding HaventOpenedCaloriesData, Mode=TwoWay}" TextColor="{StaticResource Colour_TextGrey}" Text="Step 1: Get Calories Data" />
            <Button IsVisible="{Binding HaventOpenedCaloriesData, Mode=TwoWay}" Text="Download" Command="{Binding RetrieveCaloriesData}" />
            <!-- Personal Information -->
            <Label IsVisible="{Binding PersonalInformationSetup, Mode=TwoWay}" TextColor="{StaticResource Colour_TextGrey}" Text="Step 2: Put in your personal data. It isn't shared with anyone, you will only see them in your 'own' reports. If you export a report and share it that is on you." />
        </StackLayout>
    </ContentView.Content>
</ContentView>